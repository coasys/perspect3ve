{
  "name": "perspect3ve",
  "description": "Agent-centric browser for the ADAM Layer",
  "version": "0.2.1",
  "author": {
    "name": "Nicolas Luck",
    "email": "nicolas.luck@coasys.org"
  },
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make": "electron-forge make",
    "make-linux": "electron-forge make --platform linux",
    "make-windows": "electron-forge make --platform win32",
    "package": "electron-forge package",
    "package-x64": "electron-forge package --arch=x64"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.5.0",
    "@types/json-stable-stringify": "^1.0.34",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-dmg": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron-builder": "^24.4.0",
    "electron": "^24.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vitest": "^0.25.3"
  },
  "type": "module",
  "dependencies": {
    "@junto-foundation/junto-elements": "^0.4.5",
    "@coasys/ad4m": "^0.10.0-rc2",
    "@coasys/ad4m-connect": "0.10.0-rc2",
    "patch-package": "^8.0",
    "@pixi/app": "^7.1.4",
    "@pixi/core": "^7.1.4",
    "@pixi/math-extras": "^7.1.4",
    "@tweenjs/tween.js": "^18.6.4",
    "highlight.js": "^11.8.0",
    "json-stable-stringify": "^1.0.2",
    "pixi.js": "^7.1.4",
    "svelte-easy-crop": "^2.0.1",
    "uuid": "^9.0.0"
  }
}
